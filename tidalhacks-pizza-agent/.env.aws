# AWS Environment Configuration for Pizza Agent
# Copy this to .env and fill in your AWS values

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# DynamoDB Configuration
DYNAMODB_TABLE_NAME=pizza-agent-data
DYNAMODB_ANALYTICS_TABLE=pizza-agent-analytics

# S3 Configuration
S3_BUCKET_NAME=pizza-agent-storage-unique-name

# AWS SES Configuration (No personal email needed!)
SES_FROM_EMAIL=noreply@yourdomain.com
SES_FROM_NAME=CalHacks Pizza Agent

# AWS Bedrock Configuration - Using Gemini
BEDROCK_MODEL_ID=google.gemini-1.5-pro-v1:0
BEDROCK_REGION=us-east-1

# Environment Configuration
ENVIRONMENT=production

# Agent Configuration
USE_AWS_SERVICES=true
USE_BEDROCK_AI=true
USE_DYNAMODB=true
USE_S3_STORAGE=true
USE_SES_EMAIL=true

USE_AI_EVALUATION=true
USE_AI_RESPONSES=true
USE_AI_PROMPTS=true
USE_AI_MODERATION=true
USE_RANDOM_CODES=true
ENABLE_ANALYTICS=true

# Conference Settings
CONFERENCE_ID=CALHACKS24

# Legacy API Keys (not needed with AWS)
# GEMINI_API_KEY=not_needed_with_bedrock
# EMAIL_ADDRESS=not_needed_with_ses
# EMAIL_PASSWORD=not_needed_with_ses

# Notes:
# 1. AWS SES eliminates the need for personal Gmail credentials
# 2. AWS Bedrock replaces Gemini API for AI functions
# 3. DynamoDB replaces local JSON storage
# 4. S3 provides scalable file storage
# 5. All services are managed and scalable through AWS